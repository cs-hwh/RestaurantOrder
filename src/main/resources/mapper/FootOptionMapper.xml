<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hwh.restaurant.mapper.FootOptionMapper">
    <resultMap id="footOptionMap" type="com.hwh.restaurant.po.FootOption">
        <id column="id" property="id"/>
        <result column="foot_option_id" property="footOptionId"/>
        <result column="foot_id" property="footId"/>
        <result column="foot_option_name" property="footOptionName"/>
        <result column="foot_option_value" property="footOptionValue"/>
        <result column="sort" property="sort"/>
        <result column="is_enabled" property="enabled"/>
        <result column="create_time" property="createTime"/>
        <result column="update_time" property="updateTime"/>
    </resultMap>
    <!--List<FootOption> getFootOptionListById(String footId);-->
    <select id="getFootOptionListById" resultMap="footOptionMap">
       SELECT  id,foot_option_id ,foot_id ,foot_option_name ,foot_option_value ,sort ,is_enabled, create_time,update_time
       FROM restaurant_foot_option
       WHERE foot_id=#{footId} AND is_enabled=1

    </select>
    
    
</mapper>
